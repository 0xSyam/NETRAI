<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">
    
    <!-- Bagian atas dengan tombol-tombol (Frame 11940) -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:padding="8dp"
        android:gravity="center"
        android:elevation="4dp">
        
        <!-- Tombol "Speak to NetrAI" -->
        <Button
            android:id="@+id/btnSpeakToNetrai"
            android:layout_width="128dp"
            android:layout_height="35dp"
            android:text="Speak to NetrAI"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="#3A59D1"
            android:drawableLeft="@drawable/ic_mic"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginRight="22dp" />
        
        <!-- Tombol "Stop Share" -->
        <Button
            android:id="@+id/btnStopShare"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Stop Share"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="#ED0101"
            android:drawableLeft="@drawable/ic_stop"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />
    </LinearLayout>
    
    <!-- Bagian bawah dengan teks status (Frame 11939) -->
    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="You are screen sharing now."
        android:textColor="#000000"
        android:textSize="10sp"
        android:gravity="center"
        android:padding="4dp"
        android:background="#53F88B"
        android:elevation="4dp" />
</LinearLayout> 